<% if current_user %>
	<h4> You are already logged in as <a href="/users/<%= current_user.id %>"><%= current_user.login %></a>
<% else %>
	<h1>Log In</h1>
		<%=form_tag log_in_path do%>
		<%=label_tag :login %>
		<%=text_field_tag :login %>
		<%=label_tag :password %>
		<%=password_field_tag :password %>
		<%=submit_tag "Log in" %>
		<%= link_to "Sign Up", new_user_path %>
<%end%>
<%end %>