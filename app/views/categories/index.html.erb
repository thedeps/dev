<div class="page-header">
  <h2>Categorias</h2>
</div>

<div class="table-responsive">
  <% unless @categories.blank? %>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
        </tr>
      </thead>
  
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to '', edit_category_path(category), class: 'btn btn-default glyphicon glyphicon-edit' %></td>
          <td><%= link_to '', category, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-default glyphicon glyphicon-trash' %></td>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <h5 class="text-center">Não existe categorias cadastradas.</h5>
  <% end %>
</div>
<br>
<%= link_to new_category_path, :class => 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus"></span>
    Nova Categoria
<% end %>

