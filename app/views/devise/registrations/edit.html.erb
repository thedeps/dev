<h2>Editar Cadastro</h2>
<div class="container">
  <div class="form_">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <% if current_page?(edit_user_registration_path) %>
        <%= f.label :login %><br>
        <%= f.text_field :login, :class => "form-control" %>
        
        <%= f.label :id_steam %><br>
        <%= f.text_field :id_steam, :class => "form-control" %>
      <% end %>
      
      <%= f.label :email %><br />
      <%= f.email_field :email, :class => "form-control" %>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <%= f.label :password, 'Senha' %> <i>(deixe em branco se você não quer mudá-lo)</i><br />
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    
      <%= f.label :password_confirmation, 'Confirmar Senha' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    
      <%= f.label :current_password, 'Senha Atual' %> <i>(precisamos de sua senha atual para confirmar as alterações)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
    
      <div class="actions">
        <br/>
        <%= f.submit "Atualizar", :class => "btn btn-primary" %>
        <%= link_to root_path, :class => 'btn btn-default left' do %>
          Voltar
        <% end %>
      </div>
    <% end %>
    <h3>Cancelar minha conta</h3>
    <p>Triste? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, :class => "btn btn-danger"%></p>
  </div>
</div>