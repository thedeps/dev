<div class="container">
  <div class="form_">
    <fieldset>
      <legend>Cadastro</legend>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <% if current_page?(new_user_registration_path) %> 
          <%= f.label :login %><br>
          <%= f.text_field :login, autofocus: true, :class => "form-control" %>
      
        <div class="form-group">
          <%= f.label :id_steam %><br>
          <%= f.text_field :id_steam, :class => "form-control" %>
        </div>
      <% end %>
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => "form-control" %>
    
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
    
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      <% if current_page?(new_user_registration_path) %> 
          <%= f.label :category_id, 'Tipo de UsuÃ¡rio' %><br>
          <%= f.select :category_id, options_for_select(Category.all.map {|category| [category.name,category.id]}), {}, :class => "form-control"%>
      <% end %>
      
      <div class="actions">
        <br>
        <%= f.submit "Cadastrar", :class => "btn btn-primary" %>
        <%= link_to new_user_session_path, :class => 'btn btn-default left' do %>
          Voltar
        <% end %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </fieldset>
  </div>
</div>

