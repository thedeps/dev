<div class="container">
  <div class="page-header">
    <h2>Usuários</h2>
  </div>
  
  <div class="table-responsive">
    <% unless @users.blank? %>
      <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Login</th>
          <th>Id_Steam</th>
          <th>Email</th>
          <th>Tipo de Usuário</th>
        </tr>
      </thead>
      
      <tbody class="text-center">
        <% @users.each do |user| %>
          <tr>
            <td><%= user.login %></td>
            <td><%= user.id_steam %></td>
            <td><%= user.email %></td>
            <td><%= user.category.name%></td>
            <td><%= link_to '', user, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-default glyphicon glyphicon-trash' %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
      <%= will_paginate @users, renderer: BootstrapPagination::Rails, previous_label: t(:prev), next_label: t(:next) %>
    <% else %>
      <h5 class="text-center">Não existe usuários cadastrados.</h5>
    <% end %>
  </div>
  <br>
  <%= link_to new_user_registration_path, :class => 'btn btn-primary' do %>
      Novo Usuário
  <% end %>
</div>