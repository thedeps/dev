<h1>Listing users</h1>

<table class="table">
  <thead>
    <tr>
      <th class="text-center">Login</th>
      <th class="text-center">Id_Steam</th>
      <th class="text-center">Email</th>
      <th class="text-center">Category</th>
    </tr>
  </thead>
  <tbody class="text-center">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.id_steam %></td>
        <td><%= user.email %></td>
        <td><%= user.category.name%></td>
      </tr>
    <% end %>
  </tbody>
</table>
