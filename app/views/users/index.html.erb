<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Login</th>
      <th>Id steam</th>
      <th>Email</th>
      <th>Password</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.login, user_path(user) %></td>
        <td><%= user.id_steam %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.category.name %></td>
        <td><%= link_to 'Show', user, :class => "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning" %></td>
        <% if current_user %>
        <td><%= link_to 'Destroy', user, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

